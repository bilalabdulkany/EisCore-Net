{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Network", "Serilog.Sinks.Http"],
    "MinimumLevel": "Verbose",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp} {Level} {Message} {NewLine:1} {Exception:1}"
        }
      },
      {
        "Name": "File", 
        "Args": {
          "path": "/Logs/log.txt",
          "outputTemplate": "{Timestamp} {Level} {Message} {NewLine:1} {Exception:1}",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "TCPSink",
        "Args": {
           "uri": "tcp://localhost:12201",
           "application": "dotnet-producer-app"
          }
      },
      {
        "Name": "Http",
        "Args": {
          "requestUri": "http://localhost:31311"
        }
      }
    ]
  },
  "environment": {
    "profile": "development"
  },
  "AllowedHosts": "*",
  "DatabaseSource": "Data Source=TestCore.sqlite"
}
